<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".implicit.ImplicitMemoryLeakActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="40dp"
        android:text="Implicit Reference \n Nested Classes"
        android:textColor="#739E5A"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_inner_class"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/cart_violet"
        android:text="Inner Class"
        android:textAllCaps="false"
        android:textColor="#9673A6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_anonymous_class"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/cart_violet"
        android:text="Anonymous Class"
        android:textAllCaps="false"
        android:textColor="#9673A6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_inner_class" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_handler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/cart_bg"
        android:text="Handler Example"
        android:textAllCaps="false"
        android:textColor="#9e0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_anonymous_class" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/cart_bg"
        android:text="Thread Example"
        android:textAllCaps="false"
        android:textColor="#9e0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_handler" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_runnable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/cart_bg"
        android:text="Runnable Example"
        android:textAllCaps="false"
        android:textColor="#9e0000"
        app:layout_constraintEnd_toEndOf="@+id/btn_thread"
        app:layout_constraintStart_toStartOf="@+id/btn_thread"
        app:layout_constraintTop_toBottomOf="@+id/btn_thread" />

</androidx.constraintlayout.widget.ConstraintLayout>